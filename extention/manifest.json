{
  "manifest_version": 3,
  "name": "SAB Timer PoC with Offscreen",
  "version": "1.0",
  "description": "Real parallel SAB timer with Web Workers using OffscreenDocument",

  "permissions": [
    "scripting",
    "downloads",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "SAB Timer PoC"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}
